{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "elmType": "div",
    "style": {
        "display": "flex",
        "justify-content": "left",
        "align-items": "center",
        "margin": "2px 0px"
    },
    "children": [
        {
            "elmType": "button",
            "style": {
                "border-radius": "0",
                "border": "none",
                "margin": "5px 0px",
                "padding": "0px",
                "height": "32px",
                "visibility": "=if([$File_x0020_Type] == '', 'hidden', 'visible')"
            },
            "attributes": {
            "class": "ms-bgColor-themePrimary"
            },
            "children": [
                {
                    "elmType": "a",
                    "style": {
                        "text-decoration": "none",
                        "padding": "10px 0px",
                        "width": "100%",
                        "fontColor": "fff",
                        "font-weight": "400"
                    },
                    "attributes": {
                    "href": "= @currentWeb + '/_layouts/15/download.aspx?UniqueId=' + [$UniqueId]",
                    "target": "_blank",
                    "class": "ms-fontColor-white"
                    },
                    "children": [
                        {
                            "elmType": "span",
                            "style": {
                                "vertical-align": "text-bottom",
                                "font-size": "17px",
                                "padding-left": "14px",
                                "padding-right": "4px"                                    
                            },
                            "attributes": {
                                "class": "ms-Icon",
                                "iconName": "Download"
                            }
                        },
                        {
                            "elmType": "span",
                            "txtContent": "Download",
                            "style": {
                                "font-size": "14px",
                                "padding-left": "4px",
                                "padding-right": "16px"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
